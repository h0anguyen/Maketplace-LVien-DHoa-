          .small 
          |                         
    #layoutSidenav_content
      main
        .container-fluid.px-4
          h1.mt-4 Banner
          ol.breadcrumb.mb-4
            li.breadcrumb-item.active 
          .card.mb-4
            .card-header
              i.fas.fa-table.me-1
              | Tất cả banner
            .card-body
              table#datatablesSimple
                thead
                  tr
                    th STT
                    th Ảnh
                    th Thời gian thay đổi
                tbody
                  - let STT=0
                    each banner in banners
                      tr
                        td= banner.location
                        td.row
                          form(action="/admin/banner?_method=PUT" method="post" enctype="multipart/form-data").bg-white.p-4.rounded.shadow-sm
                            .image-upload-container(style='width: 100%; height: 150px;  display: flex; justify-content: center; align-items: center; cursor: pointer;' onclick="document.getElementById('subImage3Input').click();")
                              input#subImage3Input(type='file' name='banner' accept='image/*' style='display: none;' onchange="previewImage(this, 'subImage3Preview')")
                              img#subImage3Preview.img-thumbnail.shadow.d-block(src=`data:image/png;base64,${banner.imageAddress.toString('base64')}` alt='' style='max-width: 100%; max-height: 100%;')
                            input(type="hidden", name="id" value=`${banner.bannerId}`)
                            button#submit(type="submit").d-none
                              | Lưu
                          script.
                            function previewImage(input, previewId) {
                            const file = input.files[0];
                            if (file) {
                            const reader = new FileReader();
                            reader.onload = function(e) {
                            const preview = document.getElementById(previewId);
                            preview.src = e.target.result;
                            preview.style.display = 'block';
                            document.getElementById(previewId.replace('Preview', 'Icon')).style.display = 'none';
                            }
                            reader.readAsDataURL(file);
                             document.querySelector('button[type="submit"]').disabled = true;
                             document.getElementById('submit').click();
                            }
                            }
                        td= array[STT]
                          